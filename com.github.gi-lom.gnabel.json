{
    "app-id":"com.github.gi_lom.gnabel",
    "runtime":"org.gnome.Platform",
    "runtime-version":"3.36",
    "sdk":"org.gnome.Sdk",
    "command":"gnabel",
    "finish-args":[
        "--share=network",
        "--share=ipc",
        "--device=dri",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio"
    ],
    "modules":[
        "pypi-dependencies.json",
        {
            "name":"ffmpeg",
            "cleanup":[
                "/include",
                "/lib/pkgconfig",
                "/share/ffmpeg/examples"
            ],
            "config-opts":[
                "--disable-doc"
            ],
            "sources":[
                {
                    "type":"archive",
                    "url":"https://ffmpeg.org/releases/ffmpeg-4.2.3.tar.xz",
                    "sha256":"9df6c90aed1337634c1fb026fb01c154c29c82a64ea71291ff2da9aacb9aad31"
                }
            ]
        },
        {
            "name":"gnabel",
            "buildsystem":"simple",
            "build-commands":[
                "mkdir -p /app/bin",
                "cp -r * /app/bin/",
                "install -D icon.svg /app/share/icons/hicolor/scalable/apps/gnabel.svg",
                "install -D gnabel.desktop /app/share/applications/gnabel.desktop",
                "install -D gnabel.py /app/bin/gnabel"
            ],
            "sources":[
                {
                    "type":"git",
                    "url":"."
                }
            ]
        }
    ]
}
